<h1>Users</h1>

<%= params[:error] %><br/>
<h2>Create new user</h2>
<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit %>
<% end %>


  <% @users.each do |user| %>
  <li><%= user.name%>
    <p> <%= button_to "delete user", delete_user_path(user), method: "delete", :class=>"myButton" %> </p>
    <% user.recipes.each do |recipe|%>
    <ul>
      <li><%= link_to recipe.name, recipe_path(user) %></li>

    </ul>

    <% end %>
  <% end %>
